{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Pullbase Documentation",
  "colors": {
    "primary": "#1f3448",
    "light": "#d9e2ec",
    "dark": "#102132"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Foundations",
            "pages": [
              "introduction",
              "quickstart",
              "architecture-overview",
              "concepts"
            ]
          },
          {
            "group": "Setup",
            "pages": [
              "installation",
              "bootstrapping",
              "github-app-integration",
              "configuration-repository"
            ]
          },
          {
            "group": "Operations",
            "pages": [
              "environments-and-servers",
              "agent-operations",
              "web-ui",
              "security-hardening",
              "operations-troubleshooting"
            ]
          }
        ]
      },
      {
        "tab": "Reference",
        "groups": [
          {
            "group": "CLI",
            "pages": [
              "reference/cli"
            ]
          },
          {
            "group": "API",
            "pages": [
              "reference/api"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Pullbase Website",
          "href": "https://pullbase.io",
          "icon": "globe"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Website",
        "href": "https://pullbase.io"
      }
    ]
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/pullbaseio/pullbase"
    }
  }
}
